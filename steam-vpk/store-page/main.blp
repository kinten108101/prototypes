using Gtk 4.0;
using Adw 1;

Adw.Window {
  default-height: 600;
  default-width: 800;
  
  Gtk.Box {
    orientation: vertical;
    
    Adw.HeaderBar {
      title-widget:
        Adw.WindowTitle {
          title: 'Store'; // placeholder
        };
    }
    
    Adw.Banner {
      revealed: true;
      title: 'Remote Content is disabled';
      button-label: 'Load';
    }
    
    Gtk.ScrolledWindow {
      vexpand: true;
      
      Adw.Clamp {
        maximum-size: 452;
        
        Gtk.Box {
          margin-top: 16;
          margin-bottom: 16;
          orientation: vertical;
          spacing: 16;
          
          Gtk.Box {
            Gtk.Box {
              halign: fill;
              hexpand: true;
              
              orientation: vertical;
              
              Gtk.Label {
                label: 'User Themes'; // placeholder
                xalign: 0;
                
                styles ['title-1']
              }
              
              Gtk.Label {
                label: 'fmuellner'; // placeholder
                xalign: 0;
                
                styles ['dim-label']
              }
            }
            
            Gtk.Box {
              halign: end;
              
              Gtk.Button {
                valign: center;
                label: 'Install';
                styles ['suggested-action']
              }
            }
          }
          
          Gtk.Box {
            orientation: vertical;
            
            Gtk.Label {
              label: _('Description');
              xalign: 0;
              styles ['heading']
            }
            
            Gtk.Label {
              margin-top: 6;
              label: 'Load shell themes from user directory.\nWarning: this add-on must be installed separately from mrFunreal\'s Add-on Pack. I won\'t resolve any cross-compability issue.\nSupport me on Patron: <a href=\"https://www.patreon.com/Hitman47101\">https://www.patreon.com/Hitman47101</a>'; // placeholder
              use-markup: true;
              wrap: true;
              wrap-mode: word_char;
              selectable: true;
              xalign: 0;
              styles ['multiline', 'body']
            }
            
            Gtk.Button {
              margin-top: 16;
              halign: center;
              label: 'More';
              styles ['pill']
            }
          }
          
          Gtk.Box addon-controls {
            homogeneous: true;
            spacing: 0;
            styles ["card"]
            
            Gtk.Button {
              styles ["flat", "context-tile"]
              
              Gtk.Box {
                orientation: vertical;
                spacing: 8;
                
                Gtk.Box lozenge {
                  halign: center;
                  valign: center;
                  styles ["lozenge", "grey"]
                  
                  Gtk.Label {
                    use-markup: true;
                    label: '132.0 <span size=\'small\'>MB</span>';
                  }
                }
                
                Gtk.Label {
                  label: _('Estimated Size');
                  justify: center;
                  wrap: true;
                  halign: center;
                  styles ["heading"]
                }
                
                Gtk.Label {
                  visible: true;
                  label: _('Including metatext and archive and other');
                  wrap: true;
                  justify: center;
                  lines: 3;
                  ellipsize: end;
                  styles ["caption"]
                }
              }
            }

            
            
            Gtk.Button {
              styles ["flat", "context-tile"]
              
              Gtk.Box {
                orientation: vertical;
                spacing: 8;
                
                Gtk.Box {
                  halign: center;
                  valign: center;
                  styles ["lozenge", "grey"]
                  
                  Gtk.Label {
                    use-markup: true;
                    label: '11 / 12 / 2022';
                    styles ["circular"]
                  }
                }
                
                Gtk.Label {
                  label: _('Last Update');
                  wrap: true;
                  halign: center;
                  styles ["heading"]
                }
                
                
              }
            }

            Gtk.Button {
              styles ["flat", "context-tile"]
              
              Gtk.Box {
                orientation: vertical;
                spacing: 8;
                
                Gtk.Box {
                  halign: center;
                  valign: center;
                  styles ["lozenge", "grey"]
                  
                  Gtk.Label {
                    use-markup: true;
                    label: 'Alex MVP et al';
                  }
                }
                
                Gtk.Label {
                  label: _('Creators');
                  wrap: true;
                  halign: center;
                  styles ["heading"]
                }
                
                Gtk.Label {
                  visible: true;
                  label: _('Alex MVP, mav, and someone');
                  wrap: true;
                  justify: center;
                  lines: 3;
                  ellipsize: end;
                  styles ["caption"]
                }
              }
            }
          }
          
          
        }
      }
    }
  }
}
